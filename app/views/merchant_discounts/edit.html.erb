<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, step: :any, value: @discount.percentage %><br>
  <%= f.label :quantity %>
  <%= f.number_field :quantity, value: @discount.quantity %><br>
  <%= f.submit 'Update' %>
<% end %>